---
interface Props {
  children: any;
  [key: string]: any;
}

const values = Object.values(Astro.props)

let slot = await Astro.slots.render("default");

if (!!values.length && !values.every(v => !!v))
  slot = slot.replace(
    /^\s*<[^>]+>\s*|\s*<\s*\/[^>]+>\s*$/g,
    ""
  );
---

<Fragment set:html={slot} />
