---
import Base from '@/layouts/Base.astro';
import { Paginate, Pagination } from 'astro-headless-ui';

const posts = await fetch('https://jsonplaceholder.typicode.com/posts').then(response => response.json())
---

<Base>
    <Paginate data={posts} size="10" page={Astro.params.page}>
        { page => (
            <h1>Pagination</h1>
            <p>Current Page: {page.current}</p>
            <nav class="example">
                <Pagination index url="/pagination" middle={1} total={page.last} current={page.current}>
                    {page => {
                        if (page.slot === "active") return <span>{page.number}</span>
                        if (page.slot === "disabled") return <span>...</span>
                        return <a href={page.href}>{page.number}</a>
                    }}
                </Pagination>
            </nav>
            <section>
                { page.data.map(post => (
                    <article>
                        <h2>{post.id} - {post.title}</h2>
                        <p>{post.body}</p>
                    </article>
                ))}
            </section>
            <nav class="example">
                <Pagination index url="/pagination" total={page.last} current={page.current}>
                    {page => {
                        if (page.slot === "active") return <span>{page.number}</span>
                        if (page.slot === "disabled") return <span>...</span>
                        return <a href={page.href}>{page.number}</a>
                    }}
                </Pagination>
            </nav>
        )}
        <section slot="error">
            <p><strong>This page does not exist</strong></p>
        </section>
    </Paginate>
</Base>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 1rem 0;
    }

    article {
        padding: 0 1rem;
        border: 2px solid currentColor;
    }

    nav.example {
        display: flex;
        align-items: center;
        gap: .25rem;
    }

    nav.example > a,
    nav.example > span {
        text-decoration: none;
        border-radius: 3px;
        border: 2px solid currentColor;
        padding: .25rem .6rem;
    }

    nav.example > a:hover,
    nav.example > span:hover {
        filter: brightness(75%);
    }
</style>