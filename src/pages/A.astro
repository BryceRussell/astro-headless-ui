---
import Base from "@/layouts/Base.astro";
import { A } from "astro-headless-ui";

---

<Base>
    <h1>Links</h1>
    <p>Active link is highlighted in red</p>
    <nav>
        <A href="/">
            <a href="/">Home</a>
            <active slot="active"><a href="/" style="color:red;">Home</a></active>
        </A>
        <A href="/A">
            <a href="/A">Current</a>
            <active slot="active"><a href="/A" style="color:red;">A (Current page)</a></active>
        </A>
        <A href="/pagination">
            <a href="/pagination">Pagination</a>
            <active slot="active"><a href="/pagination" style="color:red;"></a></active>
        </A>
    </nav>
</Base>

<style>
    nav {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }
</style>

