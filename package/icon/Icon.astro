---
import { HTMLAttributes } from 'astro/types';
export interface Props extends HTMLAttributes<'div'> {
    icon: string;
    mode?: string;
    inline?: boolean;
    width?: string | number;
    height?: string | number;
    flip?: string;
    rotate?: number | number;
}

const { 
    ...attrs
} = Astro.props as Props;
---

<script> import 'iconify-icon'; </script>

<iconify-icon {...attrs}>
    <slot />
</iconify-icon>
