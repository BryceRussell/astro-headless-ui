---
import Base from "@/layouts/Base.astro";

import { MultiThemeToggle, IconSwitcher } from 'astro-headless-ui';
import { Icon } from 'astro-icon';
---

<Base>
    <h1>MultiThemeToggle Examples</h1>
    <p>Inspect the body tag and watch the 'dark' class toggle on and off when button is clicked</p>
    <p>Theme is also persistant across pages usinf sessionStorage and detects system preference changes</p>
    <h2>Toggle Button</h2>
    <section>
        <MultiThemeToggle dark>Toggle Dark Theme</MultiThemeToggle>
        <MultiThemeToggle theme="blue">Toggle Blue Theme</MultiThemeToggle>
        <MultiThemeToggle theme="green">Toggle Green Theme</MultiThemeToggle>
        <MultiThemeToggle theme="red">Toggle Red Theme</MultiThemeToggle>
    </section>
    <section class="container" style="margin:2rem 1rem;padding:5rem;">
        <h2>Scoped Themes</h2>
        <MultiThemeToggle selector="section.container">Toggle Dark Theme</MultiThemeToggle>
        <MultiThemeToggle selector="section.container" theme="blue" dark>Toggle Blue Theme</MultiThemeToggle>
        <MultiThemeToggle selector="section.container" theme="green">Toggle Green Theme</MultiThemeToggle>
        <MultiThemeToggle selector="section.container" theme="red">Toggle Red Theme</MultiThemeToggle>
    </section>
    <h2>ToggleIcon Example</h2>
    <section> 
        <MultiThemeToggle dark style="padding:3rem;">
            <IconSwitcher active="body.dark" size="5rem"> 
                <Icon name="ri:sun-foggy-line"/>
                <Icon name="ri:moon-cloudy-line"/>
            </IconSwitcher>
        </MultiThemeToggle>
    </section>
    <h3>Variation</h3>
    <section> 
        <MultiThemeToggle dark style="padding:.5rem;">
            <IconSwitcher name="no-animation" active="body.dark" size="2rem" speed={0}> 
                <Icon name="ri:sun-foggy-line"/>
                <Icon name="ri:moon-cloudy-line"/>
            </IconSwitcher>
        </MultiThemeToggle>
    </section>
    <h3>Alt theme</h3>
    <section> 
        <MultiThemeToggle theme="green" style="background-color:#bbb;padding:2rem;border-radius:3px;border:2px solid gray;">
            <IconSwitcher name="green-icons" active="body.green" speed={0}> 
                <Icon name="twemoji:white-circle"/>
                <Icon name="twemoji:green-circle"/>
            </IconSwitcher>
        </MultiThemeToggle>
    </section>
</Base>

<style is:global>
    body {
        --bg: #fff;
        background-color: var(--bg);
        color: var(--color)
    }

    body.blue {
        --bg: rgb(99, 133, 201);
    }

    body.dark {
        --bg: #444;
        --color: #fff;
    }

    body.green {
        --bg: rgb(116, 204, 121);
    }

    body.red {
        --bg: rgb(225, 132, 132);
    }

    /* ---- Scoped Theme ---- */

    section.container {
        --bg-2: #fff;
        background-color: var(--bg-2);
        color: var(--color-2, #000)
    }

    section.container.blue {
        --bg-2: rgb(99, 133, 201);
    }

    section.container.dark {
        --bg-2: #444;
        --color-2: #fff;
    }

    section.container.green {
        --bg-2: rgb(116, 204, 121);
    }

    section.container.red {
        --bg-2: rgb(225, 132, 132);
    }
</style>